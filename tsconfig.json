{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "lib": ["ES2020"]
  },
  "include": ["parser.ts", "index.ts", "cli.ts"],
  "exclude": ["node_modules", "dist"]
}
